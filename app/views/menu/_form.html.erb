<%= form_for(@menu_page, url: menu_path, remote: true) do |mp| %>
	<div class='container'>
		<div class='row'>
			<div class='span12'>
				<div class='controls controls-row'>
					<div class='controls'>
						<%= mp.submit %>
					</div>
				</div>
				<div class='controls controls-row'>
					<%= mp.label :tab, 'Tab Label', class: 'span2' %>
					<%= mp.label :tab, 'Title', class: 'span2' %>
					<%= mp.label :tab, 'Info', class: 'span2' %>
				</div>
				<div class='controls controls-row'>
					<%= mp.text_field :tab, class: 'span2' %>
					<%= mp.text_field :title, class: 'span2' %>
					<%= mp.text_field :info, class: 'span4'  %>
				</div>

				<%= mp.fields_for :menu_columns do |mc| %>
					<div class='menu-container-column'>
						<div class='controls controls-row'>
							<%= mp.label 'Column span', class: 'span2' %>
							<%= mp.label '# of columns', class: 'span2' %>
						</div>
						<div class='controls controls-row'>
							<%= mc.text_field :span, class: 'span2' %>
							<%= mc.text_field :cols, class: 'span2' %>
						</div>

						<%= mc.fields_for :menu_sections do |ms| %>
							<div class='menu-container-section'>
								<div class='controls controls-row'>
									<%= content_tag :div, '', class: 'button' %>
									<%= ms.label 'Section Title', class: 'span2' %>
									<%= ms.label 'Section Description', class: 'span2' %>
								</div>
								<div class='controls controls-row'>
									<%= ms.hidden_field :_destroy %>
									<%= link_to '#', class: 'button menu-delete-section' do %>
										<%= content_tag :i, '', class: 'icon-trash' %>
									<% end %>
									<%= ms.text_field :title, class: 'span2' %>
									<%= ms.text_field :info, class: 'span2' %>
								</div>

								<div class='controls controls-row'>
									<%= content_tag :div, '', class: 'button' %>
									<%= ms.label 'Menu Item', class: 'span2' %>
									<%= ms.label 'Menu Description', class: 'span2' %>
									<%= ms.label 'Price #1 Description', class: 'span2' %>
									<%= ms.label 'Price #1', class: 'span1' %>
									<%= ms.label ' ', class: 'button' %>
									<%= ms.label 'Price #2 Description', class: 'span2' %>
									<%= ms.label 'Price #2', class: 'span1' %>
									<%= ms.label ' ', class: 'button' %>
								</div>

								<%= ms.fields_for :menu_items do |mi| %>
									<div class='controls controls-row menu-container-item'>
										<%= mi.hidden_field :_destroy %>
										<%= link_to '#', class: 'button menu-delete-item' do %>
											<%= content_tag :i, '', class: 'icon-trash' %>
										<% end %>
										<%= mi.text_field :title, class: 'span2' %>
										<%= mi.text_field :info, class: 'span2' %>

										<% price_count = 0 %>
										<%= mi.fields_for :menu_prices do |mpr| %>
											<div class='menu-container-price'>
												<%= mpr.text_field :title, class: 'span2' %>
												<%= mpr.text_field :price, class: 'span1' %>
												<%= mpr.hidden_field :_destroy %>
												<%= link_to '#', class: 'button menu-delete-price' do %>
													<%= content_tag :i, '', class: 'icon-trash' %>
												<% end %>
											</div>
											<% price_count += 1 %>
										<% end %>

										<%= add_menu_price_button mi, price_count %>
									</div>
								<% end %>

								<%= add_menu_item_button ms %>
							</div>
						<% end %>

						<%= add_menu_section_button mc %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
